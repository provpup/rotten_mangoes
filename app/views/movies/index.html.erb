<h1>Rotten Mangoes</h1>
<%= form_tag(movies_path, method: "get") do %>
  <div>
  <%= label_tag(:title, "Title:") %>
  <%= text_field_tag(:title) %>
  </div>
  <div>
  <%= label_tag(:director, "Director:") %>
  <%= text_field_tag(:director) %>
  </div>
  <div>
  <%= label_tag(:duration_criteria, "Duration:") %>
  <%= select_tag(:duration_criteria, options_for_select([['', ''], ['Shorter than 90 min', :less_than_90], ['Between 90 and 120 min', :between_90_120], ['Longer than 120 min', :greater_than_120]]))%>
  </div>
  <%= submit_tag("Search") %>
<% end %>
<%= link_to "Submit a movie!", new_movie_path %>
<hr>
<% @movies.each do |movie| %>
  <%= link_to image_tag(movie.poster_image_url), movie_path(movie) %>
  <h2><%= link_to movie.title, movie_path(movie) %></h2>
  <h3><%= movie.release_date %></h3>
  <h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes </h4>
  <p><%= movie.description %></p>
  <h5>Average review</h5>
  <p><%= movie.review_average %>/10</p>
  <hr>
<% end %>
